<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.forecast.ForecastActivityFragment"
    tools:showIn="@layout/activity_forecast">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:indeterminate="true"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-5dp"
        android:layout_marginTop="-5dp" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/woeid"
            android:id="@+id/woeidLabel"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/blankString"
            android:id="@+id/woeidValue"
            android:layout_below="@+id/woeidLabel"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/navigation_padding_bottom"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/creationTime"
            android:id="@+id/creationTimeLabel"
            android:layout_below="@+id/woeidValue"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/blankString"
            android:id="@+id/creationTimeValue"
            android:layout_below="@+id/creationTimeLabel"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/navigation_padding_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/interval"
            android:id="@+id/intervalLabel"
            android:layout_below="@+id/creationTimeValue"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/blankString"
            android:id="@+id/intervalValue"
            android:layout_below="@+id/intervalLabel"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/navigation_padding_bottom" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/active"
            android:id="@+id/activeLabel"
            android:layout_below="@+id/intervalValue"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/blankString"
            android:id="@+id/activeValue"
            android:layout_below="@+id/activeLabel"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="@dimen/navigation_padding_bottom" />
    </RelativeLayout>

</RelativeLayout>
